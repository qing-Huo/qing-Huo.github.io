assume cs:code
data segment
    db 'Welcome to Linux'
    db 16 dup (0)
data ends
code segment
start:
    mov ax,data
    mov ds,ax
    mov es,ax
    mov si,0  ; ds:si 指向 data:0
    mov di,16 ; es:di 指向 data:0010

    mov cx,16 ; rep 循环 16 次

    cld   ; 设置 DF=0,正向传送
    rep movsb ; 根据 cx，循环传送

;s:  mov al,ds:[si]
;    mov es:[di],al
;    inc si
;    inc di
;    loop s

    mov ax,4c00H
    int 21H

code ends
end start
